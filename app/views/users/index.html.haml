.direct__mail
  .user__contents
    .user__mail
      .user__mail__info
        %h3 ユーザー一覧
        - if user_signed_in?
          %h5
            ようこそ #{current_user.nickname} さん
      .user__mail__list
        - @users.each do |u|
          - if current_user.id != @users.ids
            .user__mail__list__box
              .user_image
                - if u.image?
                  = image_tag u.image.url, :size => '40x40'
                - else
                  .user_image
                    = image_tag "/assets/default.png", :size => '40x40'
              .user__name
                %p
                  %a{:href => "/users/#{u.id}"}
                    = u.nickname
                    さん
              .user__follow
                - if current_user != @user
                  - if u.followed_by?(current_user)
                    = link_to "フォロー中", user_relationships_path(u.id), method: :delete
                  - else
                    = link_to "フォロー", user_relationships_path(u.id), method: :post