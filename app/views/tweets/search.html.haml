.content-sub
  .group__header
    .content__post-btn
      = link_to  "投稿する", new_tweet_path, class: "post"
    .group__draft
      %button.group__draft__list
        = link_to "下書き",confirm_tweets_path
    .content-sub__search
      = form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, placeholder: "投稿を検索する", class: "public__search-input"
        = form.submit "検索", class: "search-btn"
.content
  .contents.row
    - @tweets.each do |tweet|
      = render partial: "tweet", locals: { tweet: tweet }