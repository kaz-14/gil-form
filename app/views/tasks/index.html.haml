.task__content
  .task__list
    .task__list__box
      .task__table
        .task__table__header
          %h2 TODO
        .task__table__main-list
          - @tasks.each do |task|
            - if task.state == "todo"
              .task__table__main-card
                .tesk__text
                = link_to task_path(task) do
                  = task.title
                .edit-delete-btn
                  = link_to edit_task_path(task) do
                    %i.fas.fa-cog
                    ="編集"
                  = link_to task_path(task), method: :delete do
                    %i.far.fa-trash-alt
                    ="削除"
          .task__post__link
            = link_to new_task_path do
              %i.fas.fa-plus
              = "タスクの追加"
    .task__list__box
      .task__table
        .task__table__header
          %h2 Doing
        .task__table__main-list
          - @tasks.each do |task|
            - if task.state == "doing"
              .task__table__main-card
                .tesk__text
                = link_to task_path(task) do
                  = task.title
                .edit-delete-btn
                  = link_to edit_task_path(task) do
                    %i.fas.fa-cog
                    ="編集"
                  = link_to task_path(task), method: :delete do
                    %i.far.fa-trash-alt
                    ="削除"
    .task__list__box
      .task__table
        .task__table__header
          %h2 Complete
        .task__table__main-list
          - @tasks.each do |task|
            - if task.state == "complete"
              .task__table__main-card
                .tesk__text
                = link_to task_path(task) do
                  = task.title
                .edit-delete-btn
                  = link_to edit_task_path(task) do
                    %i.fas.fa-cog
                    ="編集"
                  = link_to task_path(task), method: :delete do
                    %i.far.fa-trash-alt
                    ="削除"