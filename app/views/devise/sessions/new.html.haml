.log-in__content
  .log-in__list
    .log-in__list__header
      %img{:alt => "", :src => "https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg"}/
      %h1.log-in__title  ログイン
    .log-in__form
      = form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f|
        = devise_error_messages!
        .log-form__group
          = f.label :email
          = f.email_field :email, autofocus: true,placeholder: "メールアドレス", class: "log-in__form__input"
        .log-form__group
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "off",placeholder: "パスワード", class: "log-in__form__input"
        .log-form__select
          = f.label :remember_me
          %br/
          = f.check_box :remember_me
        .log-in__form-btn-1
          = f.submit "Log in", class: "log-in__form-btn"
